.side-bar
  .side-bar__header
    .user
      %h3.user__name
        = current_user.name
      .user__icon
        = link_to new_group_path(current_user) do
          = icon("far", "fa-edit", class: "far fa-edit")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .side-bar__list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group-name
            = group.name
          %p.text-message
            = group.show_last_message


